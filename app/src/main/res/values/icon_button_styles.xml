<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Splashify.Button.CircularIcon" parent="Widget.Material3.Button.IconButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">24dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:stateListAnimator">@animator/button_state_list_animator</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
    </style>

    <style name="Widget.Splashify.Button.CircularIcon.Surface" parent="Widget.Splashify.Button.CircularIcon">
        <item name="backgroundTint">?attr/colorSurfaceVariant</item>
        <item name="iconTint">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="Widget.Splashify.Button.CircularIcon.Primary" parent="Widget.Splashify.Button.CircularIcon">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>
</resources>
